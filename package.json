{
  "name": "create-ai-chat-context",
  "version": "2.0.0",
  "description": "Modern AI memory system - TypeScript/ESM with .ai/ and .aicf/ knowledge base",
  "type": "module",
  "main": "./dist/cjs/index.cjs",
  "module": "./dist/esm/index.js",
  "types": "./dist/esm/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/esm/index.d.ts",
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.cjs"
    }
  },
  "bin": {
    "create-ai-chat-context": "./dist/esm/cli.js",
    "aic": "./dist/esm/cli.js"
  },
  "scripts": {
    "build": "pnpm run clean && pnpm run build:esm && pnpm run build:cjs && pnpm run copy:templates",
    "build:esm": "tsc -p tsconfig.json",
    "build:cjs": "tsc -p tsconfig.cjs.json && pnpm run fix:cjs",
    "fix:cjs": "node scripts/fix-cjs-extensions.js",
    "copy:templates": "cp -r templates dist/",
    "clean": "rm -rf dist",
    "dev": "tsc -p tsconfig.json --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "lint": "eslint src/",
    "lint:fix": "eslint src/ --fix",
    "format": "prettier --write \"src/**/*.ts\" \"tests/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\" \"tests/**/*.ts\"",
    "typecheck": "tsc --noEmit",
    "prepublishOnly": "pnpm run build && pnpm run test && pnpm run lint"
  },
  "keywords": [
    "ai",
    "ai-context",
    "ai-memory",
    "aicf",
    "knowledge-base",
    "typescript",
    "esm",
    "cli",
    "developer-tools"
  ],
  "author": "Dennis van Leeuwen (AI Orchestrator Engineer)",
  "license": "AGPL-3.0-or-later",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Vaeshkar/create-ai-chat-context.git"
  },
  "bugs": {
    "url": "https://github.com/Vaeshkar/create-ai-chat-context/issues"
  },
  "homepage": "https://github.com/Vaeshkar/create-ai-chat-context#readme",
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "commander": "^12.1.0",
    "ora": "^8.1.1"
  },
  "devDependencies": {
    "@eslint/js": "^9.17.0",
    "@types/node": "^22.10.2",
    "@vitest/coverage-v8": "^2.1.8",
    "eslint": "^9.17.0",
    "prettier": "^3.4.2",
    "typescript": "^5.7.2",
    "typescript-eslint": "^8.19.1",
    "vitest": "^2.1.8"
  },
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ]
}
